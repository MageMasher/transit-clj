#!/bin/sh

cd `dirname $0`/..

ARGS="$@"

bin/get-transit

if [ -z "$ARGS" ] || [[ $ARGS == *java* ]]; then
  bin/get-transit-java
fi

if [ -z "$ARGS" ] || [[ $ARGS == *ruby* ]]; then
  bin/get-transit-ruby
fi

if [ -z "$ARGS" ] || [[ $ARGS == *js* ]]; then
  bin/get-transit-js
fi

exec java -server -Xms1g -Xmx1g -cp `bin/classpath`:`pwd`/test clojure.main -m transit.verify "$@"
